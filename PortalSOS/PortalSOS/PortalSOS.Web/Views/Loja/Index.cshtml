@model IEnumerable<PortalSOS.Web.Models.Loja_Models>
@{
    ViewBag.Title = "Lista de Loja";
}
<h2>@ViewBag.Title</h2>


<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo</cite></small>
</blockquote>
<hr />

@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>

}

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Nome</th>
            <th style="text-align: center;">ResponsavelCadastro</th>
            <th style="text-align: center;">CPF</th>
            <th style="text-align: center;">Status</th>
            <th style="text-align: center;">CNPJ</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.NomeFantasia</td>
                <td>@item.ResponsavelCadastro</td>
                <td>@item.CPF</td>ss
                <td>@item.Status</td>
                <td>@item.Cnpj</td>
                <td>
                    <a href="@Url.Action("edit", "loja", new { id = item.IdLoja })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "loja", new { id = item.IdLoja })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("excluir", "loja", new { id = item.IdLoja })" data-toggle="tooltip" title="Excluir"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <div class="col-lg-2 col-lg-offset-0">
        <form method="get" action="@Url.Action("index", "loja")">
            <button type="submit" class="btn btn-success">Buscar</button>
            <a href="@Url.Action("create", "loja")" class="btn btn-danger">Buscar</a>
        </form>
    </div>
</div>


