@model IEnumerable<PortalSOS.Dommain.sosportalperfil_Dommain>
@{
    ViewBag.Title = "Lista de Perfil";
}
<h2>@ViewBag.Title</h2>

<hr />

@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @TempData["msgsucesso"]
    </div>
}
else if (TempData["msgalerta"] != null)
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @TempData["msgalerta"]
    </div>
}
else if (!ViewContext.ViewData.ModelState.IsValid)
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @Html.ValidationSummary()
    </div>
}

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Perfil</th>
            <th style="text-align: center">Status</th>
            <th style="text-align: center">Data Cadastro</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.Perfil</td>
                <td>@item.Status</td>
                <td>@item.DataCadastro</td>
                <td>
                    <a href="@Url.Action("edit", "perfil", new { id = item.IdPerfil })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "perfil", new { id = item.IdPerfil })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("excluir", "perfil", new { id = item.IdPerfil })" data-toggle="tooltip" title="Excluir"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <div class="col-lg-8 col-lg-offset-0">
        <form method="get" action="@Url.Action("PerfilCreate", "Perfil")">
            <button type="submit" class="btn btn-success">Buscar</button>
            <a href="@Url.Action("PerfilLista", "Perfil")" class="btn btn-danger">Cancelar</a>
        </form>
    </div>
</div>

