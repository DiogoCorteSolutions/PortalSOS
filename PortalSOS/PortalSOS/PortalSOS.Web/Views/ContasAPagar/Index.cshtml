@model IEnumerable<PortalSOS.Web.Models.ContasAPagar_Models>
@{
    ViewBag.Title = "Lista de Contas a pagar";
}
<h2>@ViewBag.Title</h2>

<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo</cite></small>
</blockquote>

<hr />

@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>
}

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Data</th>
            <th style="text-align: center;">Fornecedor</th>
            <th style="text-align: center">Identificacao</th>
            <th style="text-align: center;">Parcela</th>
            <th style="text-align: center;">Faturado</th>
            <th style="text-align: center">Status</th>
            <th style="text-align: center;">Nfatura</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.Data</td>
                <td>@item.Fornecedor</td>
                <td>@item.Identificacao</td>
                <td>@item.Parcela</td>
                <td>@item.Faturado</td>
                <td>@item.Status</td>
                <td>@item.Nfatura</td>
                <td>
                    <a href="@Url.Action("edit", "ContasAPagar", new { id = item.IdContasAPagar })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "ContasAPagar", new { id = item.IdContasAPagar })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("excluir", "ContasAPagar", new { id = item.IdContasAPagar })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <div class="col-lg-8 col-lg-offset-0">
        <form method="get" action="@Url.Action("Create", "ContasAPagar")">
            <button type="submit" class="btn btn-success">Buscar</button>
            <a href="@Url.Action("index", "ContasAPagar")" class="btn btn-danger">Cancelar</a>
        </form>
    </div>
</div>

