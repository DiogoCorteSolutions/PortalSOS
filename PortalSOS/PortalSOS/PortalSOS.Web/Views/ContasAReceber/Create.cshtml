<hr />
@using (Html.BeginForm("create", "contasAReceber", FormMethod.Post, new { @class = "form-horizontal", id = "formCadastro", name = "formCadastro" }))
{
    if (TempData["msgerror"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgerror"]
        </div>
    }
    else if (TempData["msgsucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgsucesso"]
        </div>
    }
    else if (TempData["msgalerta"] != null)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgalerta"]
        </div>
    }
    else if (!ViewContext.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary()
        </div>
    }

    <div class="col-md-3">
        <div class="form-group">
            <label>Boleto *</label>
            @Html.TextBoxFor(x => x.Cliente, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Faturado *</label>
            @Html.TextBoxFor(x => x.Faturado, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Ndoc *</label>
            @Html.TextBoxFor(x => x.Ndoc, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>FrmPgt *</label>
            @Html.TextBoxFor(x => x.FrmPgt, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Parcela *</label>
            @Html.TextBoxFor(x => x.Parcela, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Nota *</label>
            @Html.TextBoxFor(x => x.Nota, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>StatusPed *</label>
            @Html.EditorFor(model => model.StatusPed, new { @required = "required" })&ensp;
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Parcela *</label>
            @Html.TextBoxFor(x => x.Parcela, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>Pedido *</label>
            @Html.TextBoxFor(x => x.Pedido, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Valor *</label>
            @Html.TextBoxFor(x => x.Valor, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Loja *</label>
            @Html.DropDownListFor(m => m.IdLoja, Model.DdlLoja, new { @class = "form-control", @required = "required", @placeholder = "Selecione" })
        </div>
    </div>
  
    <div class="col-md-3">
        <div class="form-group">
            <label>Status *</label>
            @Html.EditorFor(model => model.Status, new { @required = "required" })&ensp;
        </div>
    </div>
    <div id="alerta-div" style="display: none;"></div>

        <hr />

