@using PortalSOS.Web.Helpers

@{
    var menu = CustomHelper.ListarMenu;
    var count = 0;
}
@if (menu != null)

{
    foreach (var item in menu)
    {
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="themes">@item.Controller<span class="caret"></span></a>

            @if (item.SubMenu != null && item.SubMenu.Count > 0)
            {
                <ul class="dropdown-menu" aria-labelledby="themes">
                    @foreach (var items in item.SubMenu)
                    {
                        count++;
                        <li><a href="@Url.Action(items.Action, item.Controller)">@items.Action</a></li>
                        if (count >= 0 && (count < item.SubMenu.Count))
                        {
                            <li class="divider"></li>
                        }
                    }
                </ul>
            }

        </li>
    }
}

