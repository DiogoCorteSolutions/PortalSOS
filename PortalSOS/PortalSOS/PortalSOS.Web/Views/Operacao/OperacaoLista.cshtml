@model IEnumerable<PortalSOS.Web.Models.Operacao_Models>
@{
    ViewBag.Title = "Lista de Operação";
}
<h2>@ViewBag.Title</h2>

<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo</cite></small>
</blockquote>

<hr />


@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>
}


<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Operação</th>
            <th style="text-align: center;">Tipo</th>
            <th style="text-align: center;">Categoria</th>
            <th style="text-align: center">Status</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.Operacao</td>
                <td>@item.Tipo</td>
                <td>@item.Categ</td>
                <td>@item.Status</td>
                <td>
                    <a href="@Url.Action("edit", "operacao", new { id = item.IdOperacao })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "operacao", new { id = item.IdOperacao })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("excluir", "operacao", new { id = item.IdOperacao })" data-to data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

