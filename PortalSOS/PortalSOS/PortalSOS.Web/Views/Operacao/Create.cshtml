@model PortalSOS.Web.Models.Operacao_Models
@{
    ViewBag.Title = "Cadastro de Operação";

    <style>
        #example_length {
            display: none !important;
        }

        .dataTables_filter {
            display: none !important;
        }

        .erro-alert-nome {
            display: none;
        }

        .erro-alert {
            display: block;
        }

        .dataTables_length {
            display: none;
        }
    </style>
}

<h2>@ViewBag.Title</h2>

<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo!!!</cite></small>
</blockquote>
<hr />
@using (Html.BeginForm("create", "operacao", FormMethod.Post, new { @class = "form-horizontal", id = "formCadastro", name = "formCadastro" }))
{
    if (TempData["msgerror"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgerror"]
        </div>
    }
    else if (TempData["msgsucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgsucesso"]
        </div>
    }
    else if (TempData["msgalerta"] != null)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgalerta"]
        </div>
    }
    else if (!ViewContext.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary()
        </div>
    }

    <div class="col-md-3">
        <div class="form-group">
            <label>Operação *</label>
            @Html.TextBoxFor(x => x.Operacao, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Tipo *</label>
            @Html.TextBoxFor(x => x.Tipo, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Valor *</label>
            @Html.TextBoxFor(x => x.Valor, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Categoria *</label>
            @Html.TextBoxFor(x => x.Categ, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Ref *</label>
            @Html.TextBoxFor(x => x.Ref, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Alteração *</label>
            @Html.TextBoxFor(x => x.Alteracao, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Caixa *</label>
            @Html.TextBoxFor(x => x.Caixa, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Ident *</label>
            @Html.TextBoxFor(x => x.Ident, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>Turno *</label>
            @Html.TextBoxFor(x => x.Turno, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    <div class="col-md-3">
        <div class="form-group">
            <label>TipoOperação *</label>
            @Html.DropDownListFor(m => m.IdTipoOperacao, Model.DdlOperacao, new { @class = "form-control", @required = "required", @placeholder = "Selecione" })
        </div>
    </div>

    <div class="col-md-3">
        <div class="form-group">
            <label>Status *</label>
            @Html.EditorFor(model => model.Status, new { @required = "required" })&ensp;
        </div>
    </div>
    <div id="alerta-div" style="display: none;"></div>

    <hr />

    <div class="col-md-12">
        <div class="form-group m-t-10">
            <button id="btn-all-valid" name="btn-all-valid" type="submit" class="btn btn-success btn-custom waves-effect w-md m-b-5"><i class="fa fa-save"></i>&ensp;Salvar</button>
            <a id="btn-all" name="btn-all" href="@Url.Action("index", "operacao")" class="btn btn-warning btn-custom waves-effect w-md m-b-5"><i class="fa fa-reply-all"></i>&ensp;Voltar</a>

        </div>
    </div>
}

