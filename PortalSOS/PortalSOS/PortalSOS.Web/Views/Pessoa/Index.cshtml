@model IEnumerable<PortalSOS.Web.Models.Pessoa_Models>
@{
    ViewBag.Title = "Lista e usuario";
}
<h2>@ViewBag.Title</h2>

<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo</cite></small>
</blockquote>

<hr />


@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>
}


<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Nome</th>
            <th style="text-align: center;">CPF</th>
            <th style="text-align: center">CNAE</th>
            <th style="text-align: center;">CNPJ</th>
            <th style="text-align: center">Status</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.Pessoa</td>
                <td>@item.CPF</td>
                <td>@item.Cnae</td>
                <td>@item.Cnpj</td>
                <td>@item.Status</td>
                <td>
                    <a href="@Url.Action("edit", "pessoa", new { id = item.IdPessoa })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "pessoa", new { id = item.IdPessoa })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("excluir", "pessoa", new { id = item.IdPessoa })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="col-md-12">
    <div class="form-group m-t-10">
        <a id="btn-all" name="btn-all" href="@Url.Action("index", "home")" cl class="btn btn-warning btn-custom waves-effect w-md m-b-5"><i class="fa fa-reply-all"></i>&ensp;Voltar</a>

    </div>
</div>

