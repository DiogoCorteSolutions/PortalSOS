@model PortalSOS.Web.Models.Perfil_Models
@{
    ViewBag.Title = "Cadastro de Classificação";

    <style>
        #example_length {
            display: none !important;
        }

        .dataTables_filter {
            display: none !important;
        }

        .erro-alert-nome {
            display: none;
        }

        .erro-alert {
            display: block;
        }

        .dataTables_length {
            display: none;
        }
    </style>
}

<h2>@ViewBag.Title</h2>


<hr />
@using (Html.BeginForm("PerfilCreate", "Perfil", FormMethod.Post, new { @class = "form-horizontal", id = "formCadastro", name = "formCadastro" }))
{
    if (TempData["msgerror"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgerror"]
        </div>
    }
    else if (TempData["msgsucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgsucesso"]
        </div>
    }
    else if (TempData["msgalerta"] != null)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgalerta"]
        </div>
    }
    else if (!ViewContext.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary()
        </div>
    }
    <div class="col-md-10">
        <div class="form-group">
            <label>Classificação *</label>
            @Html.TextBoxFor(x => x.Perfil, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
        </div>
    </div>
    @*<div class="col-md-3">
            <div class="form-group">
                <label>Descrição Tipo *</label>
                @Html.TextBoxFor(x => x.DescricaoTipo, new { @class = "form-control", placeholder = "* campo obrigatório", required = "required" })
            </div>
        </div>*@
    @*<div class="col-md-6">
        <div class="form-group">
            <label>Tipo Perfil *</label>
            @Html.DropDownListFor(m => m.Tipo, Model.DdlTipoPerfilLista, new { @class = "form-control", @required = "required", @placeholder = "Selecione" })
        </div>
    </div>*@
    @*<div class="col-md-3">
            <div class="form-group">
                <label>Status *</label>
                @Html.EditorFor(model => model.Status, new { @required = "required" })&ensp;
            </div>
        </div>*@

    <div id="alerta-div" style="display: none;"></div>
    <hr />

