@model PortalSOS.Web.Models.Configuracao_Models
@{
    ViewBag.Title = "Cadastro de  página de acesso";

    <style>
        #example_length {
            display: none !important;
        }

        .dataTables_filter {
            display: none !important;
        }

        .erro-alert-nome {
            display: none;
        }

        .erro-alert {
            display: block;
        }

        .dataTables_length {
            display: none;
        }
    </style>
}

<h2>@ViewBag.Title</h2>

@*<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo!!!</cite></small>
</blockquote>*@
<hr />
@using (Html.BeginForm("PaginaAcessoCreate", "CadastroControle", FormMethod.Post, new { @class = "form-horizontal", id = "formCadastro", name = "formCadastro" }))
{
    if (TempData["msgerror"] != null)
    {
        <div class="alert alert-dismissible alert-danger">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgerror"]
        </div>
    }
    else if (TempData["msgsucesso"] != null)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgsucesso"]
        </div>
    }
    else if (TempData["msgalerta"] != null)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @TempData["msgalerta"]
        </div>
    }
    else if (!ViewContext.ViewData.ModelState.IsValid)
    {
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="close" data-dismiss="alert">×</button>
            @Html.ValidationSummary()
        </div>
    }
    <div class="col-md-12">
        <div class="form-group">
            <label>Nome da Pagina de sAcesso *</label>
            @Html.TextBoxFor(x => x.ControllerAction, new { @class = "form-control" })
        </div>
    </div>

    <div id="alerta-div" style="display: none;"></div>
    <hr />

    <div class="form-group">
        <div class="col-lg-2 col-lg-offset-0">
            <form method="post" action="@Url.Action("PaginaAcessoCreate", "CadastroControle")">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a href="@Url.Action("PaginaAcessoLista", "CadastroControle")" class="btn btn-danger">Cancelar</a>
            </form>
        </div>
    </div>
}
