@model IEnumerable<PortalSOS.Web.Models.Movimentacao_Models>
@{
    ViewBag.Title = "Lista de Movimentação";
}
<h2>@ViewBag.Title</h2>

<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo</cite></small>
</blockquote>

<hr />


@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>
}


<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center">Orçamento</th>
            <th style="text-align: center">Barras</th>
            <th style="text-align: center">Item</th>
            <th style="text-align: center">Produto</th>
            <th style="text-align: center">Grupo</th>
            <th style="text-align: center">SubGrupo</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.Orcamento</td>
                <td>@item.Barras</td>
                <td>@item.Item</td>
                <td>@item.Produto</td>
                <td>@item.Grupo</td>
                <td>@item.SubGrupo</td>
                <td>
                    <a href="@Url.Action("edit", "movimentacao", new { id = item.IdLoja })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "movimentacao", new { id = item.IdLoja })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("excluir", "movimentacao", new { id = item.IdMovimentacao })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <div class="col-lg-2 col-lg-offset-0">
        <form method="get" action="@Url.Action("index", "movimentacao")">
            <button type="submit" class="btn btn-success">Buscar</button>
            <a href="@Url.Action("index", "movimentacao")" class="btn btn-danger">Buscar</a>
        </form>
    </div>
</div>
