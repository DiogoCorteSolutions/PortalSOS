@model IEnumerable<PortalSOS.Dommain.sosportalconfiguracao_Dommain>
@{
    ViewBag.Title = "Lista de página de acesso";
}
<h2>@ViewBag.Title</h2>

@*<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo</cite></small>
</blockquote>*@

<hr />


@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>
}


<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Controller</th>
            <th style="text-align: center">Status</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.ControllerAction</td>
                <td>@item.Status</td>
                <td>
                    <a href="@Url.Action("edit", "CadastroControle", new { id = item.IdConfiguracao })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("visualizar", "CadastroControle", new { id = item.IdConfiguracao })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <div class="col-lg-8 col-lg-offset-0">
        <form method="get" action="@Url.Action("PaginaAcessoLista", "CadastroControle")">
            <button type="submit" class="btn btn-success">Buscar</button>
            <a href="@Url.Action("PaginaAcessoLista", "CadastroControle")" class="btn btn-danger">Cancelar</a>
        </form>
    </div>
</div>

