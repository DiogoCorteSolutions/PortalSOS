@model IEnumerable<PortalSOS.Web.Models.Endereco_Models>
@{
    ViewBag.Title = "Lista de Endereco";
}
<h2>@ViewBag.Title</h2>


@*<blockquote>
    <p>@ViewBag.Title</p>
    <small>Bem <cite title="Source Title">Vindo</cite></small>
</blockquote>*@
<hr />

@if (TempData["msgerror"] != null)
{
    <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgerror"]
    </div>
}
else if (TempData["msgsucesso"] != null)
{
    <div class="alert alert-dismissible alert-sucess">
        <button type="button" class="close" data-dismiss="alert"></button>
        @TempData["msgsucesso"]
    </div>

}

<table id="example" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th style="text-align: center;">Bairro</th>
            <th style="text-align: center;">Cdade</th>
            <th style="text-align: center;">CEP</th>
            <th style="text-align: center;">Estado</th>
            <th style="text-align: center;">Complemento</th>
            <th style="text-align: center;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr style="text-align: center;">
                <td>@item.Bairro</td>
                <td>@item.Cidade</td>
                <td>@item.CEP</td>
                <td>@item.Estado</td>
                <td>@item.Complemento</td>
                <td>
                    <a href="@Url.Action("edit", "loja", new { id = item.IdEndereco })" data-toggle="tooltip" title="Editar"><img width="20" src="~/Content/img/edit.png" /></a>
                    <a href="@Url.Action("details", "loja", new { id = item.IdEndereco })" data-toggle="tooltip" title="Visualizar"><img width="20" src="~/Content/img/view.png" /></a>
                    <a href="@Url.Action("excluir", "loja", new { id = item.IdEndereco })" data-toggle="tooltip" title="Excluir"><img width="20" src="~/Content/img/delete.png" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group">
    <div class="col-lg-2 col-lg-offset-0">
        <form method="get" action="@Url.Action("listaEndereco", "endereco")">
            <button type="submit" class="btn btn-success">Buscar</button>
            <a href="@Url.Action("createEndereco", "endereco")" class="btn btn-danger">Buscar</a>
        </form>
    </div>
</div>


